{
  "name": "validator",
  "version": "1.0.0",
  "description": "XP Freeze validator and elrond minter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/xp-network/XP.network-Elrond-Migration",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "run-p build && node dist/test.js"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@bitauth/libauth": "^1.17.1",
    "@elrondnetwork/erdjs": "^6.5.0",
    "@polkadot/api": "^5.2.1",
    "@polkadot/api-contract": "^5.2.1",
    "@polkadot/keyring": "^7.0.3",
    "@polkadot/types": "^5.2.1",
    "@polkadot/util": "^7.1.1",
    "@polkadot/util-crypto": "^7.1.1",
    "@polkadot/wasm-crypto": "^4.1.2",
    "@polkadot/x-randomvalues": "^7.1.1",
    "@types/google-protobuf": "^3.15.4",
    "bignumber.js": "^9.0.1",
    "ethers": "^5.4.2",
    "google-protobuf": "^3.17.3",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/yargs": "^16.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^9.0.0",
    "ts-protoc-gen": "^0.15.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.2.4"
  },
  "files": [
    "dist",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
